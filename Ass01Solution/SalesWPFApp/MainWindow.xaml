<Window x:Class="SalesWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <StackPanel>
            <Frame x:Name="frMain" VerticalAlignment="Stretch" NavigationUIVisibility="Visible"/>
            <StackPanel Margin="10,10" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnMember" Content="Member Management" Width="100" Height="auto" Click="btnMember_Click" Margin="10,10"></Button>
                <Button Name="btnProduct" Content="Product Management" Width="100" Height="auto" Click="btnProduct_Click" Margin="10,10"></Button>
                <Button Name="btnOrder" Content="Order Management" Width="100" Height="auto" Click="btnOrder_Click" Margin="10,10"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
